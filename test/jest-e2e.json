{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 30000,
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": ["node_modules/(?!(@faker-js)/)"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts",
    "!src/**/*.schema.ts",
    "!src/**/*.spec.ts",
    "!src/**/index.ts"
  ],
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"]
}
